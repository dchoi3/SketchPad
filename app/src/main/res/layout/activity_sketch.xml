<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sketch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.danielchoi.sketchpad.SketchActivity">
    <TextView
        android:text="Place Holder for Custom Canvas View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:layout_above="@+id/menuButton"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text=""
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#99000000"
        android:id="@+id/backgroundTV" />

    <ImageButton
        android:layout_width="35dp"
        app:srcCompat="@drawable/circle_menu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="#00000000"
        android:id="@+id/menuButton"
        android:scaleType="fitXY"
        android:layout_height="35dp" />



    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/pencil"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/pencil_imageButton"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:background="#00000000" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/rectangle"
        android:layout_below="@+id/pencil_imageButton"
        android:layout_alignStart="@+id/pencil_imageButton"
        android:id="@+id/rect_imageButton"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:background="#00000000" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/red"
        android:layout_below="@+id/rect_imageButton"
        android:layout_alignStart="@+id/rect_imageButton"
        android:id="@+id/red_imageButton"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:background="#00000000"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/blue"
        android:layout_below="@+id/red_imageButton"
        android:layout_alignStart="@+id/red_imageButton"
        android:id="@+id/blue_imageButton"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:background="#00000000"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/yellow"
        android:layout_below="@+id/blue_imageButton"
        android:layout_alignStart="@+id/blue_imageButton"
        android:id="@+id/yellow_imageButton"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:background="#00000000"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/white"
        android:layout_below="@+id/yellow_imageButton"
        android:layout_alignStart="@+id/yellow_imageButton"
        android:id="@+id/white_imageButton"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:background="#00000000"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/black"
        android:layout_below="@+id/white_imageButton"
        android:layout_alignStart="@+id/white_imageButton"
        android:id="@+id/black_imageButton"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:background="#00000000"/>
</RelativeLayout>
